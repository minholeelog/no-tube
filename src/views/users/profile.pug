extends ../base
include ../mixins/video

block content 
    div.profile__data
        if user.avatarUrl === ""
            img(src="/statics/img/default.png", alt="").avatar
        else
            img(src="/" + user.avatarUrl, alt="").avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message 비디오 없음