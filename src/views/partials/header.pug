header
    a(href="/").header__logo
         i.fab.fa-youtube
    nav 
        ul 
            li 
                div#themeBtn
                    i.far.fa-moon
            li 
                a(href="/search")
                    i.fa.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Logout
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            img.header__avatar(src="/statics/img/default.png")
                        else if loggedInUser.avatarUrl.includes('github')
                            img.header__avatar(src=loggedInUser.avatarUrl)
                        else if loggedInUser.avatarUrl.includes('kakao')
                            img.header__avatar(src=loggedInUser.avatarUrl)
                        else 
                            img.header__avatar(src="/" + loggedInUser.avatarUrl)
            else    
                li 
                    a(href="/login") Login 
                li
                    a(href="/join").header__btn Join
            